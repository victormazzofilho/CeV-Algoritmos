algoritmo "Idade"
// Função :
// Autor :
// Data : 17/03/2022
// Seção de Declarações 
var
   ano_atual, ano_nasc, idade: inteiro
inicio
// Seção de Comandos 
   Escreva ("Em que anos nós estamos?")
   Leia (ano_atual)
   Escreva ("Em que ano eu nasci?")
   Leia (ano_nasc)
   idade <- ano_atual - ano_nasc
   Escreva ("Minha idade será ",idade)
fimalgoritmo
